---
import Footer from "../components/LayoutComponent/Footer.astro";
import Navbar from "../components/LayoutComponent/Navbar.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" sizes="any" />

    <!-- Favicon moderno en SVG -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Apple Touch Icon -->
    <link
      rel="apple-touch-icon"
      sizes="32x32"
      href="/public/favicon-32x32.png"
    />

    <!-- Safari Pinned Tab (macOS/iOS) -->
    <link
      rel="mask-icon"
      href="/public/safari-pinned-tab.svg"
      color="#000000"
    />
    <meta name="generator" content={Astro.generator} />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-title" content="Bonprix" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="theme-color" content="#000000" />
    <title>Bonprix</title>
  </head>
  <body>
    <Navbar />
    <slot />
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    scroll-behavior: smooth;
  }

  @font-face {
    font-family: "General Sans";
    src: url("/fonts/GeneralSans-Regular.otf") format("opentype");
    font-weight: 400;
    font-style: normal;
    font-display: swap;
  }
</style>
