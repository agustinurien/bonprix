---
import { Image } from 'astro:assets';
import construccion from '../../src/assets/construccion.png';
import { FaLinkedin, FaSquareWhatsapp } from "react-icons/fa6";
import { FaSquareInstagram } from "react-icons/fa6";
---
<div>
	
	<Image src={construccion} alt="ConstrucciÃ³n" />
	<div class="socials">
		<h2>Contactate con nosotros</h2>
		<div class="social-icons">
			<a href="https://www.linkedin.com/company/104602475/admin/dashboard/" target="_blank"><FaLinkedin /></a>
			<a href="https://www.instagram.com/grupo.bonprix/" target="_blank"><FaSquareInstagram /></a>
			<a href="https://wa.me/5491164610799" target="_blank"><FaSquareWhatsapp /></a>
		</div>
	</div>
</div>

<style>
	div {
		position: relative;
		display: flex;
		justify-content: center;
		align-items: center;
		height: fit-content;
	}
	img {
		
		width: 100%;
		height: auto;
		object-fit: contain;
	}
	.socials {
		
		position: absolute;
		top: 75%;
		left: 0;

		transform: translate(0, -50%);
		height: fit-content;
		width: 100%;

		font-family: Arial, sans-serif;
		font-size: 14px;
		color: #ffffff;
		
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		
	}
	.social-icons {
		
		display: flex;
		gap: 10px;
	}
	a {
		color: rgba(255, 255, 255, 0.726);
		text-decoration: none;
		font-size: 50px;
	}
	a :hover {
		color: #ffffff;
	}

	@media screen and (max-width: 1080px) {
		a {
		font-size: 30px;
	}
		
	}
	@media screen and (max-width: 600px) {
		a {
		font-size: 20px;
		
	}
		
	}
	@media screen and (max-width: 390px) {
		a {
		font-size: 10px;
		
	}
		
	}
</style>

